# Build stage
FROM node:22-alpine AS builder

WORKDIR /app

# Copy root package files
COPY package.json package-lock.json ./

# Copy workspace package.json files (needed for npm workspaces)
COPY apps/pitanga-api/package.json ./apps/pitanga-api/
COPY apps/pitanga/package.json ./apps/pitanga/
COPY libs/auth-types/package.json ./libs/auth-types/
COPY libs/api-client/package.json ./libs/api-client/

# Install all dependencies (including dev for build and workspace deps)
RUN npm install

# Copy source code
COPY . .

# Reset NX cache to ensure clean build
RUN npx nx reset

# Build workspace libraries first (ensures they are compiled)
RUN npx nx build @pitanga/auth-types --skip-nx-cache || true

# Generate Prisma client
RUN npx prisma generate --schema=apps/pitanga-api/prisma/schema.prisma --config=apps/pitanga-api/prisma.config.ts

# Build the API (workspace libraries are bundled by webpack)
RUN npx nx build @pitanga/pitanga-api --configuration=production --skip-nx-cache

# Production stage
FROM node:22-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=3333

# Create non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nestjs

# Copy built application (includes generated package.json)
COPY --from=builder /app/dist/apps/pitanga-api ./

# Install production dependencies only
RUN npm install --omit=dev && \
    npm cache clean --force

# Copy Prisma client from builder (generated by prisma generate)
COPY --from=builder /app/node_modules/.prisma ./node_modules/.prisma
COPY --from=builder /app/node_modules/@prisma/client ./node_modules/@prisma/client

# Copy workspace libraries (fallback in case they weren't fully bundled)
COPY --from=builder /app/libs/auth-types/dist ./node_modules/@pitanga/auth-types/dist
COPY --from=builder /app/libs/auth-types/package.json ./node_modules/@pitanga/auth-types/package.json

# Copy Prisma schema (needed for migrations in production)
COPY --from=builder /app/apps/pitanga-api/prisma ./prisma

# Change ownership
RUN chown -R nestjs:nodejs /app

USER nestjs

EXPOSE 3333

CMD ["node", "main.js"]
