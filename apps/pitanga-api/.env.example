# Environment variables for pitanga-api
# Copy this file to .env and fill in your values

# PostgreSQL connection string
# Dokku sets this automatically when you link: dokku postgres:link pitanga-db pitanga-api
DATABASE_URL="postgresql://user:password@localhost:5432/pitanga?schema=public"

# MongoDB connection string
# Dokku sets this automatically when you link: dokku mongo:link pitanga-mongo pitanga-api
MONGODB_URL="mongodb://user:password@localhost:27017/pitanga"

# Server configuration
PORT=3333
HOST=0.0.0.0
NODE_ENV=development

# ============================================
# Authentication
# ============================================

# JWT Secret (min 32 characters, generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Frontend URL (for email links and OAuth redirects)
FRONTEND_URL="http://localhost:3000"

# ============================================
# OAuth - Google
# ============================================
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3333/api/auth/google/callback"

# ============================================
# OAuth - Facebook
# ============================================
# Get credentials at: https://developers.facebook.com/apps
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_CALLBACK_URL="http://localhost:3333/api/auth/facebook/callback"

# ============================================
# Email - Resend
# ============================================
# Get API key at: https://resend.com/api-keys
RESEND_API_KEY=""
EMAIL_FROM="noreply@pitanga.digital"

# ============================================
# Two-Factor Authentication
# ============================================
TWO_FACTOR_APP_NAME="Pitanga"
